 <?xml version="1.0" encoding="UTF-8"?>
<!--
This is a simple example of two squares, parametrized by linear 
B-splines meeting along one side
-->
<xml>
  <!-- Patch 0 -->
  <Geometry type="TensorBSpline2" id="1">
    <Basis type="TensorBSplineBasis2">
      <Basis type="BSplineBasis" index="0">
	<KnotVector degree="2">0 0 0 1 1 1 </KnotVector>
      </Basis>
      <Basis type="BSplineBasis" index="1">
	<KnotVector degree="2">0 0 0 1 1 1 </KnotVector>
      </Basis>
    </Basis>
    <coefs geoDim="2">
     -1.0 -1.0
     -0.64 -0.64
     -0.28 -0.28
     -1.0 0.0
     -0.76 0.0
     -0.52 0.0
     -1.0 1.0
     -0.64 0.64
     -0.28 0.28
    </coefs>
  </Geometry>

  <!-- Patch 1 -->
  <Geometry type="TensorBSpline2" id="2">
    <Basis type="TensorBSplineBasis2">
      <Basis type="BSplineBasis" index="0">
	<KnotVector degree="2">0 0 0 1 1 1 </KnotVector>
      </Basis>
      <Basis type="BSplineBasis" index="1">
	<KnotVector degree="2">0 0 0 1 1 1 </KnotVector>
      </Basis>
    </Basis>
    <coefs geoDim="2">
     -1.0 -1.0
      0.0 -1.0
      1.0 -1.0
     -0.64 -0.64
      0.0 -0.76
     0.64 -0.64
     -0.28 -0.28
      0.0 -0.52
      0.28 -0.28
    </coefs>
  </Geometry>

    <!-- Patch 2 -->
  <Geometry type="TensorBSpline2" id="3">
    <Basis type="TensorBSplineBasis2">
      <Basis type="BSplineBasis" index="0">
	<KnotVector degree="2">0 0 0 1 1 1 </KnotVector>
      </Basis>
      <Basis type="BSplineBasis" index="1">
	<KnotVector degree="2">0 0 0 1 1 1 </KnotVector>
      </Basis>
    </Basis>
    <coefs geoDim="2">
      0.28 -0.28
      0.64 -0.64
      1.0 -1.0
      0.52 0.0
      0.76 0.0
      1.0 0.0
      0.28 0.28
      0.64 0.64
      1.0 1.0
    </coefs>
  </Geometry>

  <!-- Patch 3 -->
  <Geometry type="TensorBSpline2" id="4">
    <Basis type="TensorBSplineBasis2">
      <Basis type="BSplineBasis" index="0">
	<KnotVector degree="2">0 0 0 1 1 1 </KnotVector>
      </Basis>
      <Basis type="BSplineBasis" index="1">
	<KnotVector degree="2">0 0 0 1 1 1 </KnotVector>
      </Basis>
    </Basis>
    <coefs geoDim="2">
     -1.0  1.0
     -0.64 0.64
     -0.28  0.28
      0.0  1.0
      0.0  0.76
      0.0  0.52
      1.0  1.0
     0.64  0.64
      0.28  0.28
    </coefs>
  </Geometry>

  
  <!-- A multipatch section describes the configuration
       of the two patches above -->
  <MultiPatch parDim="2" id="0">
    <patches type="id_range">1 4</patches>
  </MultiPatch>

</xml>
